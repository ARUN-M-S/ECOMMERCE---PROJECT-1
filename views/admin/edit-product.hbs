<section>
    <div class="container">
    <div class="row">
      <h2>edit product</h2>
        <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
  <div class="col-md-6">
    <label for="" class="form-label">brand :</label>
    <input type="text" name="brand" value="{{product.brand}}" class="form-control">
  <div class="mt-3">
    <label for="" class="form-label">category:</label>
    <input type="text" name="category" value="{{product.category}}" class="form-control" id="exampleInputPassword1">
  </div>

 
     <div class="mt-3">
    <label for="" class="form-label">Description:</label>
    <input type="text" name="description" value="{{product.description}}" class="form-control" id="exampleInputPassword1">
  </div>


  <div class="mt-3">
    <label for="" class="form-label">orginal price:</label>
    <input type="text" name="orginalPrice" value="{{product.orginalPrice}}" class="form-control" id="exampleInputPassword1">
  </div>
 
  <div class="mt-3">
    <label for="" class="form-label">offer price:</label>
    <input type="text" name="offerPrice" value="{{product.offerPrice}}" class="form-control" id="exampleInputPassword1">
  </div>


  <div class="mt-3">
    <label for="" class="form-label">offer percentage:</label>
    <input type="text" name="offerpercentage" value="{{product.offerpercentage}}" class="form-control" id="exampleInputPassword1">
  </div>

  <div class="mt-3">
    <label for="" class="form-label">image:</label>
    <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px; height:auto" id="imgView">
    <input type="file" name="image"  value="{{product._id}}.jpg" class="form-control" id="exampleInputPassword1" onchange="viewImage(event)">
  </div>

  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
    </div>
    </div>
</section>
<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
  )
</script>